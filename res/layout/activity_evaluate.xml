<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abs__background_holo_light" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_title_hight"
        android:background="@drawable/title_bg" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_one_back"
                android:onClick="finishView" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="理财评估"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_two_submit" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/main_title_hight"
        android:background="@drawable/image_bg"
        android:padding="5dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/recommendinfo_title_bg"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="个人信息"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/recommendinfo_title_bg2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eva_linear1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:orientation="vertical"
                android:padding="0.5dp" >

                <RelativeLayout
                    android:id="@+id/eva_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/paperinfo_content_bg"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="姓名"
                        android:textColor="@color/set_text1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eva_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:hint="请输入您的姓名"
                        android:textColor="@color/set_text2"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/blue" />

                <RelativeLayout
                    android:id="@+id/eva_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/paperinfo_content_bg"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="职业"
                        android:textColor="@color/set_text1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eva_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:hint="请输入您的职业"
                        android:textColor="@color/set_text2"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/blue" />

                <RelativeLayout
                    android:id="@+id/eva_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/paperinfo_content_bg"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="年收入"
                        android:textColor="@color/set_text1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eva_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:hint="请输入您的年收入"
                        android:textColor="@color/set_text2"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/recommendinfo_title_bg"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="理财状况"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/recommendinfo_title_bg2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eva_linear2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:orientation="vertical"
                android:padding="0.5dp" >

                <RelativeLayout
                    android:id="@+id/eva_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/paperinfo_content_bg"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="风险偏好"
                        android:textColor="@color/set_text1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eva_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/set_text2"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/blue" />

                <RelativeLayout
                    android:id="@+id/eva_layout5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/paperinfo_content_bg"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="投资偏好"
                        android:textColor="@color/set_text1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eva_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/set_text2"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/blue" />

                <RelativeLayout
                    android:id="@+id/eva_layout6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/paperinfo_content_bg"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="资产状况"
                        android:textColor="@color/set_text1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eva_text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/set_text2"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/blue" />

                <RelativeLayout
                    android:id="@+id/eva_layout7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/paperinfo_content_bg"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="家庭状况"
                        android:textColor="@color/set_text1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eva_text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/set_text2"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>